@{
    ViewData["Title"] = "Dashboard";
}
@model DashboardVendorView;

@section css {
    <link href="@Url.Content("~/css/dashboardstyle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/nav.css")" rel="stylesheet" type="text/css" />
}
<header>
    <img src="../images/white-nosub-inflogo.png" alt="logo" class="white-logo">
    <input type="checkbox" id="nav-toggle" class="nav-toggle">
    <nav>
      <ul>
        <li><a href="http://infinterest.com/#home">About</a></li>
        <li><a href="/vendor-profile/@Model.currentUser.UserId">@Model.currentUser.FirstName Profile</a></li>
        <li><a href="/logoff">Sign out</a></li>
      </ul>
    </nav>
    <label for="nav-toggle" class="nav-toggle-label">
        <span></span>
    </label>
</header>
<div id="dashboardcontainer">
    <div id="leftsection">
        <div class="dashsearch">
            <form action="">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Near:</label>
                    <div class="col-sm-10" id="input">
                        <input type="text" class="form-control" placeholder="Zip Code">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Radius:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="mi/km">
                    </div>
                </div>
                <div class="form-group">
                    <label for="price" class="price">Price Range</label>
                    <div class="daterangecontainer">
                        <input type="number" class="form-control daterange" min="10000" max="100000000" value="10000">
                        <label>to</label>
                        <input type="number" class="form-control daterange" min="10000" max="100000000" value="100000000">
                    </div>
                </div>
                <div class="form-group">
                    <label for="price" class="price">Date Range</label>
                    <div class="daterangecontainer">
                        <input type="date" class="form-control daterange">
                        <label>to</label>
                        <input type="date" class="form-control daterange">
                    </div>
                </div>
                <!-- Button trigger modal -->
                <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#exampleModalLong">Search</button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Your search results</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="modal-result">
                                    <img src="../images/kitchen-1799712_960_720.jpg" alt="kitchenpic" >
                                    <div>
                                        <h4>42352 43rd Ave SE</h4>
                                        <h4>Belletown, WA 90528</h4>
                                        <h6>June 2, 2019</h6>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ac est odio. Fusce lacus diam, elementum eget elit in, ultrices consectetur sapien. Aenean tincidunt hendrerit tempus.</p>
                                        <a href="/event-detail"><h5>Details</h5></a>
                                    </div>
                                </div>
                                <div class="modal-result">
                                    <img src="../images/home2.jpg" alt="kitchenpic" class="respic">
                                    <div>
                                        <h4>44 Main St</h4>
                                        <h4>Town Center, WA 90543</h4>
                                        <h6>July 16, 2019</h6>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ac est odio. Fusce lacus diam, elementum eget elit in, ultrices consectetur sapien. Aenean tincidunt hendrerit tempus.</p>
                                        <a href="/event-detail"><h5>Details</h5></a>
                                    </div>
                                </div>
                             
                                
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div id="middlesection" class="vendor">
      <h4>Upcoming Events</h4>
      
      
        @{
          foreach (Event eve in Model.allEvents)
          {
            <div class="allevents">
              <div class="eventhead">
                <a href="event-detail/@eve.EventId"><h4>@eve.OpenHouseDateTime</h4></a>
                <h6>Area of House Featured: @eve.AreaOfHouse</h6>
              </div>
              <div class="eventleft">
                <img src="@eve.Listing.ImgUrl" alt="" height="100" width="100">
                
              </div>
              
              
              
              <div class="eventcenter">
                
                <a href="broker-profile/@eve.Listing.Broker.UserId"><h6>Broker: @eve.Listing.Broker.FirstName @eve.Listing.Broker.LastName</h6></a>
                
                <h6>Zip Code: @eve.Listing.Zip</h6>
                <h6>Price: $@eve.Listing.Price</h6>
                <a href="@eve.Listing.MLSLink"><h6>MLS Link</h6></a>
                
                
              </div>
              <div class="eventright">
                <form>
                  <button type="submit" class="btn btn-secondary" formaction="event-detail/eve.EventId/request">Request to Join Event</button>
                </form>
              </div>
            </div>
          }
        }
      
    </div>
    <div id="rightsection">
        
        <div class="confevents">
          <h4>Confirmed Events</h4>
          @{
            foreach (Event events in Model.usersEvents)
            {
              <div class="eventdetails">
                <div>
                  <a href="event-detail/@events.EventId"><h6>@events.OpenHouseDateTime</h6></a>
                  <h6>Address:</h6> TROUBLE PULLING ADDRESS THROUGH
                  <a href="broker-profile/@events.Listing.Broker.UserId"><h6>Broker: @events.Listing.Broker.FirstName @events.Listing.Broker.LastName</h6></a>
                  <h6>Featured Home Area: @events.AreaOfHouse</h6>
                  <!-- //confirmed vendors -->
                  
                </div>
              </div>
            }
          }  
        </div>
        <div class="reqdevents"> 
          <h4>Requested Events</h4> 
          @{
            foreach (Event events in Model.usersEvents)
            {
              // ADD CONFIRMED BOOL - doesn't seem to be working for initial try//
              <div class="eventdetails">
                <div>
                  <a href="event-detail/@events.EventId"><h6>@events.OpenHouseDateTime</h6></a>
                  <h6>Address:</h6> TROUBLE PULLING ADDRESS THROUGH
                  <a href="broker-profile/@events.Listing.Broker.UserId"><h6>Broker: @events.Listing.Broker.FirstName @events.Listing.Broker.LastName</h6></a>
                  <h6>Featured Home Area: @events.AreaOfHouse</h6>
                  <!-- //confirmed vendors -->
                  
                </div>
              </div>
            }
          }   
                
        </div>   
    </div>     
      
  </div>
</div>